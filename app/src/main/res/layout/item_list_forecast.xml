<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/lightSkyBlue"
              android:clickable="true"
              android:focusable="true"
              android:paddingLeft="@dimen/dimens_10dp"
              android:foreground="?android:attr/selectableItemBackground"
              android:orientation="vertical">

    <TextView
        android:id="@+id/item_forecast_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18sp"
        android:textStyle="bold"
        android:text="Mon, 29 Jun 18"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_temp_maximum"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18sp"/>

        <TextView
            android:id="@+id/item_forecast_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_5dp"
            android:text="45"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_temp_minimum"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18sp"/>

        <TextView
            android:id="@+id/item_forecast_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_5dp"
            android:text="35"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_forecast_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_18sp"
        tools:text="Sunny"/>
</LinearLayout>
